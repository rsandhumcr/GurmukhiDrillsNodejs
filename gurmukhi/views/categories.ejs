<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <% include partials/page/head.ejs %>
</head>
<body>
<% include partials/page/header.ejs %>
<h1><%= title %></h1>
<div class="container">
  <div class="row">
    <form class="form-horizontal" action="/categories/create" method="post">
      <fieldset>
        <!-- Textarea -->
        <div class="form-group">
          <label class="col-sm-2 control-label" for="categoryName">Name</label>
          <div class="col-md-6">
            <input type="text" class="form-control" id="categoryName" name="categoryName">Category Name</input>
          </div>
        </div>
        <!-- Button -->
        <div class="form-group">
          <label class="col-md-2 control-label" for="btnSaveNote">Save Note</label>
          <div class="col-md-4">
            <button id="btnSaveNote" name="btnSaveNote" class="btn btn-primary" type="submit">Save</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4">Id</div>
    <div class="col-sm-4">Category Name</div>
  </div>
  <% results.forEach( function(item){ %>
  <div class="row">
      <div class="col-sm-4"><%= item.id %></div>
      <div class="col-sm-4"><%= item.categoryName %></div>
  </div>
  <% }) %>
</div>
<% include partials/page/footer.ejs %>
<% include partials/page/bottomscript.ejs %>
</body>
</html>
